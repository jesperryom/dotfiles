# launch kitty with tmp file for remote control
cmd - return : /Applications/Kitty.app/Contents/MacOS/kitty --listen-on unix:/tmp/mykitty --single-instance -d ~/code --session ~/.config/kitty/startup_session

# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# swap window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move window
shift + cmd - h : yabai -m window --warp west
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east

# equalize size of windows
shift + alt - 0 : yabai -m space --balance

# focus monitor
shift + alt - l  : yabai -m display --focus prev
shift + alt - h  : yabai -m display --focus next

# send window to monitor and follow focus
shift + ctrl - l  : yabai -m window --display prev; yabai -m display --focus prev
shift + ctrl - h  : yabai -m window --display next; yabai -m display --focus next

# move space
shift + ctrl - n  : yabai -m space --move next
shift + ctrl - p  : yabai -m space --move prev

# rotate tree
alt - r : yabai -m space --rotate 90

# mirror tree y-axis
alt - y : yabai -m space --mirror y-axis

# mirror tree x-axis
alt - x : yabai -m space --mirror x-axis

# toggle desktop offset
alt - s : yabai -m space --toggle padding; yabai -m space --toggle gap

# toggle window fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window fullscreen zoom
cmd + shift - f : yabai -m window --toggle native-fullscreen

# create desktop and follow focus
shift + alt - n : yabai -m space --create;\
                id=$(yabai -m query --displays --display | grep "spaces");\
                yabai -m space --focus $(echo ${id:10:${#id}-10})

# destroy desktop
shift + alt - w : yabai -m space --destroy

# fast focus desktop
shift + alt - z : yabai -m space --focus prev
shift + alt - x : yabai -m space --focus next
shift + alt - 1 : yabai -m space --focus 1
shift + alt - 2 : yabai -m space --focus 2
shift + alt - 3 : yabai -m space --focus 3
shift + alt - 4 : yabai -m space --focus 4
shift + alt - 5 : yabai -m space --focus 5
shift + alt - 6 : yabai -m space --focus 6

# send window to desktop and follow focus
shift + ctrl - z : yabai -m window --space prev; yabai -m space --focus prev
shift + ctrl - x : yabai -m window --space next; yabai -m space --focus next
shift + ctrl - 1 : yabai -m window --space  1; yabai -m space --focus 1
shift + ctrl - 2 : yabai -m window --space  2; yabai -m space --focus 2
shift + ctrl - 3 : yabai -m window --space  3; yabai -m space --focus 3
shift + ctrl - 4 : yabai -m window --space  4; yabai -m space --focus 4
shift + ctrl - 5 : yabai -m window --space  5; yabai -m space --focus 5
shift + ctrl - 6 : yabai -m window --space  6; yabai -m space --focus 6

# change layout of desktop
f3 : yabai -m space --layout float
f4 : yabai -m space --layout bsp
