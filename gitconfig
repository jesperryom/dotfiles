[user]
  name = Jesper Ryom
  email = jesper@ryom.me

[push]
  default = current

[rebase]
  autosquash = true

[color]
  ui = auto

[core]
  excludesfile = ~/.gitignore_global
  editor = nvim

[diff]
  tool = vimdiff
  colorMoved = zebra

[difftool]
  prompt = false

[merge]
  tool = vimdiff
  conflictstyle = diff3
  prompt = true

[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[remote "origin"]
  prune = true
