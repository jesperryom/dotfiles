<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>local.check-email</string>
	<key>ProcessType</key>
	<string>Background</string>
	<key>ProgramArguments</key>
	<array>
		<string>sh</string>
		<string>-c</string>
		<string>curl -n imaps://imap.fastmail.com -X 'STATUS INBOX (UNSEEN)'</string>
	</array>
	<key>StandardErrorPath</key>
	<string>/tmp/local.autoupdate.err</string>
	<key>StandardOutPath</key>
	<string>/tmp/local.autoupdate.out</string>
	<key>StartInterval</key>
	<integer>300</integer>
</dict>
</plist>
