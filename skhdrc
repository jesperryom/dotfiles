# launch kitty with tmp file for remote control
cmd - return: /Applications/Kitty.app/Contents/MacOS/kitty \
              --listen-on unix:/tmp/mykitty --single-instance -d ~/code

# misc single commands
shift + cmd - f: yabai -m window --toggle native-fullscreen
        alt - 0: yabai -m space --balance
        alt - f: yabai -m window --toggle zoom-fullscreen
        alt - r: yabai -m space --rotate 90
        alt - s: yabai -m space --toggle padding; yabai -m space --toggle gap
        alt - x: yabai -m space --mirror x-axis
        alt - y: yabai -m space --mirror y-axis
             f3: yabai -m space --layout float
             f4: yabai -m space --layout bsp

# focus window
alt - h: yabai -m window --focus west
alt - j: yabai -m window --focus south
alt - k: yabai -m window --focus north
alt - l: yabai -m window --focus east

# move window
shift + alt - h: yabai -m window --warp west
shift + alt - j: yabai -m window --warp south
shift + alt - k: yabai -m window --warp north
shift + alt - l: yabai -m window --warp east

# send window to desktop and follow focus
shift + alt - p: yabai -m window --space prev; yabai -m space --focus prev
shift + alt - n: yabai -m window --space next; yabai -m space --focus next
shift + alt - 1: yabai -m window --space  1; yabai -m space --focus 1
shift + alt - 2: yabai -m window --space  2; yabai -m space --focus 2
shift + alt - 3: yabai -m window --space  3; yabai -m space --focus 3
shift + alt - 4: yabai -m window --space  4; yabai -m space --focus 4
shift + alt - 5: yabai -m window --space  5; yabai -m space --focus 5
shift + alt - 6: yabai -m window --space  6; yabai -m space --focus 6

# send window to monitor and follow focus
shift + alt - left: yabai -m window --display prev; yabai -m display --focus prev
shift + alt - right:  yabai -m window --display next; yabai -m display --focus next

# move desktop
shift + cmd - right: yabai -m space --move next
shift + cmd - left:  yabai -m space --move prev

# focus desktop
shift + cmd - h: yabai -m space --focus prev
shift + cmd - l: yabai -m space --focus next
shift + cmd - 1: yabai -m space --focus 1
shift + cmd - 2: yabai -m space --focus 2
shift + cmd - 3: yabai -m space --focus 3
shift + cmd - 4: yabai -m space --focus 4
shift + cmd - 5: yabai -m space --focus 5
shift + cmd - 6: yabai -m space --focus 6

# create/destroy desktops
shift + cmd - x: yabai -m space --destroy
shift + cmd - c: yabai -m space --create && \
                  set index (yabai -m query --spaces --display \
                  | jq 'map(select(."native-fullscreen" == 0))[-1].index') && \
                  yabai -m space --focus "$index"

# focus monitor
cmd + ctrl - h: yabai -m display --focus prev
cmd + ctrl - l: yabai -m display --focus next
